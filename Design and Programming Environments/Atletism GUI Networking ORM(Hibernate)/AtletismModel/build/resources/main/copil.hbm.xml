<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="model.Copil"
           table="Copil">
        <id name="id" column="id">
            <generator class="increment"/>
        </id>
        <property
                name="firstName"
                column="FIRST_NAME"/>
        <property
                name="lastName"
                column="LAST_NAME"/>
        <property
                name="age"
                column="AGE"/>

    </class>
</hibernate-mapping>